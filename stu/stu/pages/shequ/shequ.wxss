.announcement-page {
    padding: 10px;
    background-color: #f4f5f7;
  }
  
  .announcement-item {
    margin-bottom: 15px;
    padding: 10px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    cursor: pointer;
  }
  
  .announcement-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .announcement-title {
    font-size: 16px;
    font-weight: bold;
    color: #2c3e50;
  }
  
  .announcement-time {
    font-size: 12px;
    color: #95a5a6;
  }
  
  .content-preview {
    font-size: 14px;
    color: #7f8c8d;
    line-height: 1.6;
    word-wrap: break-word;  /* 保证长文本能换行 */
  }
  