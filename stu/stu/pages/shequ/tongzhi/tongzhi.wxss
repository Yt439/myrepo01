/* pages/notification-detail/notification-detail.wxss */
.notification-detail {
  padding: 10px;
  background-color: #f4f5f7;
  height: 100vh; /* 使用视口高度确保全屏 */
  display: flex;
  flex-direction: column;
}

.notification-header {
  margin-bottom: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.notification-title {
  font-size: 18px;
  font-weight: bold;
  color: #2c3e50;
}

.notification-time {
  font-size: 12px;
  color: #95a5a6;
}

.notification-content {
  font-size: 14px;
  color: #7f8c8d;
  line-height: 1.6;
  margin-bottom: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3; /* 根据需要调整行数 */
  -webkit-box-orient: vertical;
}

.comment-section {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 60px; /* 留出空间给评论输入框 */
}

.comment-item {
  padding: 10px;
  background-color: #fff;
  border-radius: 8px;
  margin-bottom: 10px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.comment-header {
  display: flex;
  align-items: center;
}

.comment-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.comment-info {
  flex: 1;
}

.comment-author {
  font-weight: bold;
  color: #2c3e50;
}

.comment-time {
  font-size: 12px;
  color: #95a5a6;
}

.comment-content {
  font-size: 14px;
  color: #7f8c8d;
  margin-top: 10px;
}

.comment-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-top: 1px solid #ddd;
  padding: 10px;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.comment-input input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 14px;
  margin-right: 10px;
}

.comment-input .van-button {
  flex-shrink: 0; /* 防止按钮缩小 */
}