<view class="container">
  <form bindsubmit="formSubmit">
    <view class="input-group">
      <input name="username" placeholder="请输入昵称" required />
    </view>
    <view class="input-group">
      <input name="email" placeholder="请输入邮箱" required />
    </view>
    <view class="input-group">
      <input name="password" type="password" placeholder="请输入密码" required />
    </view>
    <view class="input-group">
      <input name="confirmPassword" type="password" placeholder="请再次输入密码" required />
    </view>
    <button formType="submit" type="primary">注册</button>
  </form>
  
  <view class="links">
    <navigator url="/pages/login/login" open-type="reLaunch" class="link">已有账号？登录</navigator>
  </view>
</view>