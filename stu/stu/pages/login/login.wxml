<view class="container">
  <text class="label">英语词汇学习平台</text>
  <form bindsubmit="formSubmit">
    <view class="input-group">
      <input name="email" placeholder="请输入邮箱" required />
    </view>
    <view class="input-group">
      <input name="password" type="password" placeholder="请输入密码" required />
      <navigator url="/pages/login/forgot-password/forgot-password" class="link">忘记密码</navigator>
    </view>
    <button formType="submit" class="login-button">确认登录</button>
    
  </form>
  
  <view class="links">
    <navigator url="/pages/login/register/register" class="link">注册新账号</navigator>
    
  </view>
</view>