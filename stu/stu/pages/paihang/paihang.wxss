.rank-container {
  padding: 15px;
  background-color: #f5f5f5;
}

.rank-title {
  font-size: 24px;  /* 减小标题字体 */
  font-weight: bold;
  text-align: center;
  margin-bottom: 15px;  /* 减少标题与排行榜的间距 */
  color: #4CAF50;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 10px;  /* 减小内边距 */
  background-color: #fff;
  border-radius: 12px;
  margin-bottom: 10px;  /* 减少卡片之间的间距 */
  box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  height: 80px;  /* 限制每项的高度 */
}

.rank-item:hover {
  transform: translateY(-3px);  /* 减少悬停时的浮动效果 */
}

.rank-avatar {
  width: 40px;  /* 减小头像的尺寸 */
  height: 40px;
  border-radius: 50%;
  margin-right: 12px;  /* 减小头像与文字之间的间距 */
  border: 2px solid #4CAF50;
}

.rank-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.rank-nickname {
  font-size: 14px;  /* 减小昵称字体 */
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.rank-score {
  font-size: 12px;  /* 减小分数字体 */
  color: #4CAF50;
  margin-bottom: 5px;
}

.rank-last-login {
  font-size: 10px;  /* 减小上次登录时间字体 */
  color: #888;
}

.van-cell {
  padding-left: 0;
  padding-right: 0;
}








/* 弹出框背景 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* 弹出框内容 */
.modal {
  background-color: #fff;
  border-radius: 8px;
  padding: 20px;
  width: 80%;
  max-width: 400px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.modal-header {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #4CAF50;
}

.modal-content {
  margin-bottom: 20px;
}

.modal-item {
  font-size: 14px;
  margin-bottom: 10px;
}

.modal-footer {
  text-align: center;
}

.modal-btn {
  background-color: #4CAF50;
  color: white;
  padding: 8px 16px;
  border-radius: 5px;
  font-size: 14px;
  border: none;
  cursor: pointer;
}

.modal-btn:hover {
  background-color: #45a049;
}
