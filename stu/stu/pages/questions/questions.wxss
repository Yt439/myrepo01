page{
  background: linear-gradient(to bottom, #c5e4cd 20%, #ffffff 40%);
}

.container {
  padding: 20px;
}

.question {
  font-size: 18px;
  margin-top: 40rpx;
  min-height: 200rpx;
}

.option {
  width: 600rpx;
  margin: 5px 0;
}

.option-button {
  display: block;
  padding: 5px;
  font-size: 16px;
  width: 100%;
  height: 10%;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin: 5px 0;
  background-color: rgb(255, 255, 255);
  text-align: center;
}

.option-button.selected {
  background-color: #4caf50;
  color: white;
}

.footer {
  margin-top: 20px;
  color:#9ec4bd;
  text-align: center;
}



.option-button {
  width: 100%;
  margin: 10px 0;
  background-color: #f2f3f5;
  border-radius: 12px;
}
.footer {
  margin-top: 20px;
  text-align: center;
  color: #888;
}
