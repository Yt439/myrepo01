.edit-profile {
  padding: 20px;
  background-color: #f4f5f7;
}

/* 头像上传区域 */
.avatar-uploader {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}

.avatar-placeholder,
.avatar-preview {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 头像图片样式 */
.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 提示上传头像样式 */
.upload-placeholder {
  width: 80px;
  height: 80px;
  background-color: #e5e5e5;
  border-radius: 50%;
  color: #888;
  font-size: 14px;
  text-align: center;
}

/* 标题样式 */
.edit-profile .van-form__title {
  font-size: 18px;
  margin-bottom: 20px;
  color: #2c3e50;
}

/* 表单元素间距 */
.edit-profile .van-field {
  margin-bottom: 15px;
}

/* 按钮样式 */
.edit-profile .van-button {
  width: 100%;
}
