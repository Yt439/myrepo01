.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  background: linear-gradient(to bottom, #e0f7fa, #fff);
  height: 100vh;
}

.button-group{
  margin: 60rpx;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.subtitle {
  font-size: 14px;
  color: #888;
}

.content {
  width: 100%;
  text-align: center;
  margin-top: 80rpx;

}

.word {
  font-size: 36px;
  font-weight: bold;
  margin-bottom: 20px;
}

.options {
  background-color: #f5f5f5;
  margin-bottom: 20px;
}

.option {
  background-color: #f8f0f0;
  padding: 10px;
  margin-bottom: 10px;
  border-radius: 5px;
}

.uncertain-button {
  background-color: #fff;
  border: 1px solid #ccc;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
}

.footer {
  text-align: center;
  color: #888;
  margin-top: auto;
}